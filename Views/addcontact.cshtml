<html>
  <head>
    <link rel="stylesheet" href="/Content/CSS/style.css" type="text/CSS">
    <script src="/Content/JS/jquery-3.0.0.min.js"></script>
  </head>
  <body>
    @Html.Raw(Model.GetHeaderHTML())
    <form action="/addContact" method="post" id="addContactForm">
      <label for="firstName">First Name</label>
      <input type="text" name="firstName" id="firstName"></input>
      <label for="lastName">Last Name</label>
      <input type="text" name="lastName" id="lastName"></input>
      <label for="phoneNumber">Phone</label>
      <input type="text" name="phoneNumber" id="phoneNumber"></input>
      <label for="email">Email</label>
      <input type="text" name="email" id="email"></input>
      <label for="address">Address</label>
      <input type="text" name="address" id="address"></input>
      <label for="company">Company/Organization</label>
      <input type="text" name="company" id="company"></input>
      <label for=""></label>
      <input type="text" name="" id=""></input>
      <select name="group" id="group">
        @Html.Raw(Model.GetGroupOptionsHTML())
      </select>
      <span type="button" id="addGroup">Add group</span>
      <button type="submit">Add Contact</button>
    </form>
    <a href="/clear">Remove All Contacts</a>

    <form id="newGroupForm" class="hidden">
      <label for="newGroup">New group name:</label>
      <input type="text" name="newGroup" id="newGroup">
      <button type="submit">Add group</button>
    </form>



    <script src="/Content/JS/scripts.js"></script>
  </body>
</html>
